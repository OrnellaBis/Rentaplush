<h1>MON DASHBOARD</h1>
<h2>Mes réservations</h2>

<div class="container">
<div class="card-booking">
  <% @bookings.each do |booking| %>
    <div class="card-product">
    <div class="home-card booking-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "plushes/#{booking.plush.name.downcase}.png" %>')"></div>
    <div class="card-product-infos">
      <ul>
          <li> <strong><%= booking.plush.name %> </strong> </li>
          <li> Vous avez reservé du <%= booking.start_date %> au <%= booking.end_date %></li>
          <li> <%= booking.plush.localisation %></li>
          <li class="pb-3"> <%= booking.plush.price_per_day %> €</li>
          <li > <%= link_to booking_path(booking), method: :delete, data:{confirm: "Souhaitez-vous annuler votre booking ?"} do %>
              <p>Supprimer <i class="fas fa-trash-alt pl-1"></i></p></li>
  <% end %>
      </ul>
 </div>
</div>
 <% end %>
</div>
</div>
